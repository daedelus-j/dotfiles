export PS1="\[\033[0;32m\]\u\[\033[0m\] ~ \! \[\033[1;36m\] \d \@ \[\033[1;35m\]\n\w \e[1;33;49m\]\$(parse_git_branch)\n\[\033[0;31m\]♠\[\033[0m\] ▶ "

