#export PS2='> ' # Secondary prompt
#export PS3='#? ' # Prompt 3
#export PS4='+' # Prompt 4

parse_git_branch() {
  git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}

# set the PS1 variable
# export PS1="\n\[\e[0;36m\]\u\[\e[0;31m \]\w\[\e[1;33;49m\] \e[0;36m\]\d \e[0;36m\]\@ \n\e[1;33;49m\$(parse_git_branch)\[\e[1;37m\]\[\033[0m\] \e[37;1m▶ "
#  export PS2=""
